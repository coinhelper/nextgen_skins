<!DOCTYPE template>
<!--
  Description:
    Small text for switches.
-->
<Template>
	<WidgetGroup>
		<Layout>vertical</Layout>
		<Size>me,f</Size>
		<Style> QGroupBox { padding-top: 1px; } </Style>
		<Children>
			<WidgetGroup>
				<Layout>stacked</Layout>
				<Size>f,f</Size>
				<Children>
					<Label>
						<Size>f,f</Size>
					    <Style> QLabel { font: 9px PT Mono; font-weight: bold; color: rgba(255,255,255,50%); text-align: center; padding-left: 1px; }</Style>
					    <Text><Variable name="text"/></Text>
					</Label>
					<Label>
						<Size>f,f</Size>
					    <Style> QLabel { font: 9px PT Mono; font-weight: bold; color: rgba(0,0,0,100%); text-align: center; padding-left: 1px; margin-bottom:3px;}</Style>
					    <Text><Variable name="text"/></Text>
					</Label>
				</Children>
			</WidgetGroup>
		</Children>
	</WidgetGroup>
</Template>