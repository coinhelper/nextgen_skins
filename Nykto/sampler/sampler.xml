<!DOCTYPE template>
<!--
  Description:
    Sampler.
-->
<Template>
	<WidgetGroup>
		<ObjectName>Sampler</ObjectName>
		<Layout>horizontal</Layout>
		<SizePolicy>me,f</SizePolicy>
		<MaximumSize>300,-1</MaximumSize>
		<Children>
			<Template src="skin:spacers/2px.xml"/>
			<WidgetGroup>
				<ObjectName>SamplerBig</ObjectName>
				<Layout>vertical</Layout>
				<Children>
					<Template src="skin:spacers/2px.xml"/>
					<WidgetGroup>
						<Style> QGroupBox { background-color: #F1AD0D; } </Style>
						<Layout>horizontal</Layout>
						<Children>
							<Template src="skin:indicators/vumeter/vumeter-stereo.xml">
								<SetVariable name="color">#F1AD0D</SetVariable>
								<SetVariable name="raga">QGroupBox { background-color: rgba(255, 0, 0, 25%);}</SetVariable>
							</Template>
						</Children>
					</WidgetGroup>
					<WidgetGroup>
						<ObjectName>SamplerBody</ObjectName>
						<Style>QGroupBox { background-color: #303030;  }</Style>
						<Size>me,50f</Size>
						<!-- <Layout>vertical</Layout> -->
						<Children>
							<Template src="skin:buttons/play-sampler.xml"/>
						</Children>
					</WidgetGroup>
					<Template src="skin:decorations/bottom-shadow.xml"/>
				</Children>
			</WidgetGroup>
			<Template src="skin:spacers/2px.xml"/>
		</Children>
	</WidgetGroup>
</Template>