<!DOCTYPE template>
<!--
Description: Transparent expanding button.
-->
<Template>
    <PushButton>
        <TooltipId><Variable name="tooltip"/></TooltipId>
        <NumberStates><Variable name="states"/></NumberStates>
        <RightClickIsPushButton>true</RightClickIsPushButton>
        <Size>me,me</Size>
        <State>
            <Number>0</Number>
        </State>
        <State>
            <Number>1</Number>
        </State>
        <State>
            <Number>2</Number>
        </State>
        <State>
            <Number>3</Number>
        </State>
        <Connection>
            <ConfigKey><Variable name="channel"/>,<Variable name="leftclick"/></ConfigKey>
            <ButtonState>LeftButton</ButtonState>
            <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
        </Connection>
        <Connection>
            <ConfigKey><Variable name="channel"/>,<Variable name="rightclick"/></ConfigKey>
            <ButtonState>RightButton</ButtonState>
            <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
        </Connection>
    </PushButton>
</Template>