<!DOCTYPE template>
<!--
Description: Ultra overlay.
-->
<Template>
    <WidgetGroup>
        <Size>me,me</Size>
        <Style>QGroupBox { background-color: rgba(1,204,255,25%); }</Style>
        <Connection>
            <ConfigKey><Variable name="channel"/>,<Variable name="indicator"/></ConfigKey>
            <BindProperty>visible</BindProperty>
        </Connection>
    </WidgetGroup>
    <WidgetGroup>
        <Size>me,me</Size>
        <Style>QGroupBox { background-color: rgba(1,204,255,0%); }</Style>
        <Connection>
            <ConfigKey><Variable name="channel"/>,<Variable name="indicator"/></ConfigKey>
            <BindProperty>visible</BindProperty>
            <Transform>
                <Invert/>
                <Add>1</Add>
            </Transform>
        </Connection>
    </WidgetGroup>
</Template>