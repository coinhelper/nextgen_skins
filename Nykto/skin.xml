<!DOCTYPE skin>
<skin>
	<manifest>
		<title>Nykto</title>
		<author>zezic</author>
		<version>1.12.0.01</version>
		<description>Very customizable dark skin</description>
		<language>en</language>
		<license>Creative Commons Attribution, Share-Alike 3.0 Unported</license>
		<attributes>
			<attribute config_key="[Master],num_decks">4</attribute>
			<attribute config_key="[Master],num_samplers">16</attribute>
			<attribute config_key="[Master],num_preview_decks">1</attribute>
		</attributes>
	</manifest>
	<ObjectName>Mixxx</ObjectName>
	<Style src="skin:style.qss"/>
	<MinimumSize>-1,-1</MinimumSize>
	<SizePolicy>me,me</SizePolicy>
	<Layout>vertical</Layout>
	<Children>
		<SetVariable name="global_spacing">8f,8f</SetVariable>
		<SetVariable name="global_small_spacing">6f,6f</SetVariable>
		<SetVariable name="block_spacing">4f,4f</SetVariable>

		<!-- Panel -->

		<WidgetGroup>
			<Layout>vertical</Layout>
			<Size>me,f</Size>
			<Children>
				<WidgetGroup>
					<Layout>horizontal</Layout>
					<Size>me,me</Size>
					<Children>
						<WidgetGroup>
							<Layout>vertical</Layout>
							<Size>f,f</Size>
							<Children>
								<Template src="skin:decorations/top-gray.xml"/>
								<WidgetGroup>
									<Layout>vertical</Layout>
									<Size>f,f</Size>
									<Style> QGroupBox { background-color: #303030; } </Style>
									<Children>
										<Template src="skin:spacers/dynamic.xml"/>
										<WidgetGroup>
											<Layout>horizontal</Layout>
											<Size>f,f</Size>
											<Style> QGroupBox { background: transparent; } </Style>
											<Children>
												<Template src="skin:spacers/dynamic.xml"/>
												<Template src="skin:buttons/green-nodark.xml">
													<SetVariable name="size">30f,30f</SetVariable>
													<!-- <SetVariable name="maximumsize">42,-1</SetVariable> -->
													<!-- <SetVariable name="minimumsize">42,42</SetVariable> -->
													<SetVariable name="states">2</SetVariable>
													<SetVariable name="text"></SetVariable>
													<SetVariable name="image">settings</SetVariable>
													<SetVariable name="channel">[Global]</SetVariable>
													<SetVariable name="leftclick">blueprint</SetVariable>
													<SetVariable name="rightclick">none</SetVariable>
													<SetVariable name="indicator">blueprint</SetVariable>
												</Template>
												<Template src="skin:spacers/dynamic.xml"/>
											</Children>
										</WidgetGroup>
										<Template src="skin:spacers/dynamic-small.xml"/>
									</Children>
								</WidgetGroup>
								
								<Template src="skin:decorations/bottom-shadow.xml"/>
							</Children>
						</WidgetGroup>
						
					</Children>
				</WidgetGroup>
			</Children>
		</WidgetGroup>
		<Template src="skin:spacers/2px.xml"/>
		<!-- Samplers (for testing) -->

		<WidgetGroup>
			<Layout>vertical</Layout>
			<Size>me,me</Size>
			<Children>
				<WidgetGroup>
					<Layout>horizontal</Layout>
					<Size>me,me</Size>
					<Children>
						<Template src="skin:sampler/sampler.xml">
							<SetVariable name="group">[Samplers]</SetVariable>
							<SetVariable name="channel">[Sampler1]</SetVariable>
						</Template>
						<Template src="skin:spacers/blocks.xml"/>
						<Template src="skin:sampler/sampler.xml">
							<SetVariable name="group">[Samplers]</SetVariable>
							<SetVariable name="channel">[Sampler2]</SetVariable>
						</Template>
					</Children>
				</WidgetGroup>
				<Template src="skin:spacers/2px.xml"/>
				<WidgetGroup>
					<Layout>horizontal</Layout>
					<Size>me,me</Size>
					<Children>
						<Template src="skin:sampler/sampler.xml">
							<SetVariable name="group">[Samplers]</SetVariable>
							<SetVariable name="channel">[Sampler3]</SetVariable>
						</Template>
						<Template src="skin:spacers/blocks.xml"/>
						<Template src="skin:sampler/sampler.xml">
							<SetVariable name="group">[Samplers]</SetVariable>
							<SetVariable name="channel">[Sampler4]</SetVariable>
						</Template>
					</Children>
				</WidgetGroup>
				<Template src="skin:spacers/2px.xml"/>
			</Children>
		</WidgetGroup>
		<Template src="skin:spacers/blocks.xml"/>
	</Children>
</skin>